{
  "name": "themestyler",
  "version": "1.0.0",
  "description": "Theming toolbelt for any React application",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf modules lib dist",
    "test": "jest",
    "prettier": "prettier --write 'src/**/*.{js,json,css,ts}'",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "build":
    "npm run clean && npm run build-lib && npm run build-modules && npm run build-dist && npm run build-dist-js",
    "build-dist-js": "babel dist/common.js -o dist/common.es5.js",
    "build-dist": "node rollup.js",
    "build-modules": "gulp build-modules",
    "build-lib": "npm run build-ts && npm run build-js",
    "build-ts": "gulp build-ts",
    "build-js": "babel src --out-dir lib",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "watch": "watch 'npm run build' ./src"
  },
  "lint-staged": {
    "*.{js,json,css,ts}": ["prettier --write", "git add"]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  }
}
