{
  "name": "freestyler-renderer",
  "version": "1.3.6",
  "description": "freestyler CSS renderer",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf modules lib dist",
    "build": "npm run clean && npm run build-lib && npm run build-modules && npm run build-dist",
    "build-dist": "node rollup.js",
    "build-modules": "gulp build-modules",
    "build-lib": "npm run build-ts && npm run build-js",
    "build-ts": "gulp build-ts",
    "build-js": "babel src --out-dir lib",
    "test": "jest",
    "test:server": "mocha -r ts-node/register src/**/*.test-server.ts*",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "watch": "watch 'npm run build' ./src"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "fast-extend": "0.0.2",
    "freestyler-util": "^1.3.6"
  },
  "devDependencies": {
    "@types/chai": "4.1.1",
    "chai": "4.1.2",
    "mocha": "5.0.0",
    "rewire": "^2.5.2",
    "rimraf": "^2.6.2",
    "ts-node": "4.1.0",
    "typescript": "2.6.2"
  }
}
